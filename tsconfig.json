{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["ES2022"],
    "module": "ES2022",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "resolveJsonModule": true
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "exclude": ["node_modules", "artifacts", "cache", ".git"],
  "include": [
    "scripts/**/*",
    "test/**/*",
    "typechain-types/**/*",
    "hardhat.config.ts",
    "test/factory.test.ts",
    "test/receiverFactory.test.js"
  ]
}
