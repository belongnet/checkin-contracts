{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "artifacts", "cache", ".git"],
  "include": [
    "scripts/**/*",
    "test/**/*",
    "typechain-types/**/*",
    "hardhat.config.ts",
    "test/factory.test.ts",
    "test/receiverFactory.test.js"
  ]
}
